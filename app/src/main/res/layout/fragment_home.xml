<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/downtown"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomeFragment">
   <TextView
       android:layout_width="match_parent"
       android:layout_height="70dp"
      android:text="Emirates Grand Hotel"
      android:fontFamily="cursive"
      android:textSize="52dp"
       android:layout_marginTop="10dp"
       android:textFontWeight="900"
       android:textColor="@color/black"
      android:textStyle="bold"
      android:gravity="center"/>

   <LinearLayout
       android:id="@+id/first_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_weight="1"
      android:orientation="horizontal">
      <androidx.cardview.widget.CardView
          android:id="@+id/about_hotel"
          android:layout_width="200dp"
          android:layout_height="200dp"
          app:cardCornerRadius="100dp"
          android:layout_marginEnd="250dp"
          app:cardBackgroundColor="@color/light_orange"
          >
         <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:layout_gravity="center"
           android:src="@drawable/hotel"
           android:id="@+id/img1"/>
         <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Hotel"
             android:fontFamily="cursive"
             android:textColor="@color/skyhard"
           android:layout_gravity="bottom|center_horizontal"
           android:layout_marginBottom="10dp"
           android:textSize="28sp"
           android:textStyle="bold"
           />
    </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/uae_guide"
          android:layout_width="200dp"
          android:layout_height="200dp"
          app:cardCornerRadius="100dp"
          android:layout_margin="10dp"
          app:cardBackgroundColor="@color/light_orange"
          >
         <ImageView
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_gravity="center"
             android:src="@drawable/city_sign"
             android:id="@+id/img2"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="City Guide"
             android:textColor="@color/skyhard"
             android:fontFamily="cursive"
             android:layout_gravity="bottom|center_horizontal"
             android:layout_marginBottom="10dp"
             android:textSize="28sp"
             android:textStyle="bold" />
      </androidx.cardview.widget.CardView>
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:layout_weight="1"
       android:orientation="horizontal">
      <androidx.cardview.widget.CardView
          android:id="@+id/taxi"
          android:layout_width="200dp"
          android:layout_height="200dp"
          app:cardCornerRadius="100dp"
          android:layout_marginEnd="250dp"
          app:cardBackgroundColor="@color/light_orange"
          >
         <ImageView
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_gravity="center"
             android:src="@drawable/taxi"
             android:id="@+id/img3"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Taxi"
             android:fontFamily="cursive"
             android:textColor="@color/skyhard"
             android:layout_gravity="bottom|center_horizontal"
             android:layout_marginBottom="10dp"
             android:textSize="28sp"
             android:textStyle="bold"
             />
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/restaurants"
          android:layout_width="200dp"
          android:layout_height="200dp"
          app:cardCornerRadius="100dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          app:cardBackgroundColor="@color/light_orange"
         >
         <ImageView
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:layout_gravity="center"
             android:src="@drawable/hotel_services"
             android:id="@+id/img4"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Services"
             android:fontFamily="cursive"
             android:textColor="@color/skyhard"
             android:layout_gravity="bottom|center_horizontal"
             android:layout_marginBottom="10dp"
             android:textSize="28sp"
             android:textStyle="bold"
             />
      </androidx.cardview.widget.CardView>

   </LinearLayout>
</LinearLayout>