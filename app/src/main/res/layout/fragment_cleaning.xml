<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".ServiceBookFragment">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/back_and_home"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_cleaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            android:layout_gravity="top"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="cursive"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:textSize="52sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ref_text_c"
            android:textSize="90dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="cursive"
            android:visibility="gone"
            android:text="SomeOne Will contact you shortly" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:id="@+id/myCleaningLinear"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/c_editbox_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/c_room_number_box"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/input_design"
                    android:hint="Room Number"
                    android:saveEnabled="false"
                    android:inputType="phone"
                    android:textColorHint="@color/black"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <EditText
                    android:id="@+id/c_name_box"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:background="@drawable/input_design"
                    android:hint="Your First Name"
                    android:saveEnabled="false"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/black"
                    android:padding="20dp"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/c_room_number_submit"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/c_editbox_layout"
                android:layout_marginStart="422dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_shape"
                android:fontFamily="cursive"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="28dp" />

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>